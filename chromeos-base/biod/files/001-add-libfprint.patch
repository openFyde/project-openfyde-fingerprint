+std::optional<int> LibFpDevice::GetIndexOfLastTemplate() {
+  if (fprints_->len >= MaxTemplateCount() || fprints_->len < 1) {
+    LOG(ERROR) << "Invalid index of last template: " << fprints_->len << ".";
+    return std::nullopt;
+  }
+  return fprints_->len - 1;
